<h1>Editar</h1>
	<form action="/tarefa/update" method="POST"> 
		<div class="mb-3">
			<label for="tituloTarefa" class="form-label">Título</label>
			<input type="text" name="titulo" class="form-control" value="<%- title %>">
			<input type="hidden" name="id_tarefa" value="<%- id_tarefa %>">
			<input type="hidden" name="id_usuario" value="<%- usuario_id_usuario %>">
		</div>
		<div class="mb-3">
			<label for="descricaoTarefa" class="form-label">Descrição</label>
			<input class="form-control" name="descricao" id="descricaoTarefa" rows="3" value="<%- description %>"></input>
		</div>
		<div class="mb-3">
			<button type="submit">Salvar</button> 
		</div>
	</form> 